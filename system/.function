#!/usr/bin/env bash

# Switch long/short prompt

ps0() {
  unset PROMPT_COMMAND
  PS1='$ '
}

ps1() {
  source "$DOTFILES_DIR"/system/.prompt_bash
}

# Get named var (usage: get "VAR_NAME")

get() {
  echo "${!1}"
}

# Add to path

prepend-path() {
  case ":$PATH:" in
  *":$1:"*) ;;
  *) [ -d "$1" ] && PATH="$1:$PATH" ;;
  esac
}

# Show 256 TERM colors

colors() {
  local X=$(tput op)
  local Y=$(printf %$((COLUMNS - 6))s)
  for i in {0..255}; do
    local o=00$i
    echo -e "${o:${#o}-3:3} $(
      tput setaf $i
      tput setab $i
    )${Y// /=}$X"
  done
}

# Calculator

calc() {
  echo "$*" | bc -l
}

# Markdown

md() {
  pandoc "$1" | lynx -stdin -dump
}
